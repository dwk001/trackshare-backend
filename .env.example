# TrackShare OAuth Environment Variables
# Copy this file to .env and fill in your actual values

# Base URL for your TrackShare deployment
TRACKSHARE_BASE_URL=https://trackshare.online

# Google OAuth Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth Credentials  
# Get these from: https://developer.apple.com/account/resources/identifiers/list
APPLE_CLIENT_ID=your.apple.client.id
APPLE_CLIENT_SECRET=your-apple-client-secret

# JWT Secret for TrackShare sessions
TRACKSHARE_JWT_SECRET=your-super-secret-jwt-key-here

# JWT TTL in seconds (default: 7 days)
TRACKSHARE_JWT_TTL_SECONDS=604800
